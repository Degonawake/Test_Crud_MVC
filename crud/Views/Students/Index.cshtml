@model IEnumerable<crud.Models.Entities.ViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Students List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="bg-dark text-light">
           
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Birth Date
            </th>
            <th>
                Classroom Id
            </th>
            <th>
               Grade Id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            @foreach (var student in item.students)
            {
        <tr>
               
            <td>
                @Html.DisplayFor(modelItem => student.FirstName)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => student.LastName)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => student.Birthdate)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => student.ClassroomId)
            </td>
                    @foreach (var classroom in item.classrooms)
                    {
                    <td>
                        @Html.DisplayFor(modelItem => classroom.Classroom)
                    </td>
                    }
                <td>
                        @Html.DisplayFor(modelItem => student.GradeId)
                </td>
            <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
            </td>
        </tr>
}
}
    </tbody>
</table>

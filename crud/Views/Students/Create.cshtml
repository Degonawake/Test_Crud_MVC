@model crud.Models.Entities.ViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Student</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form class="form-control bg-light" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="students.FirstName" class="control-label"></label>
                <input asp-for="students.FirstName" class="form-control" />
                <span asp-validation-for="students.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="students.LastName" class="control-label"></label>
                <input asp-for="students.LastName" class="form-control" />
                <span asp-validation-for="students.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="students.Birthdate" class="control-label"></label>
                <input value="@DateTime.Now" type="date" asp-for="students.Birthdate" class="form-control"  />
                <span asp-validation-for="students.Birthdate" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="students.ClassroomId" class="control-label"></label>
                <select asp-for="students.ClassroomId"  asp-items="Model.classrooms.Select(c => new SelectListItem(c.Classroom, c.Id.ToString()))" class="form-control">
                    <option value="" disabled selected>Select Classroom</option>
                </select>
                <span asp-validation-for="students.ClassroomId" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="students.GradeId" class="control-label"></label>
                <select asp-for="students.GradeId" asp-items="Model.grades.Select(g => new SelectListItem(g.Grade, g.Id.ToString())) " class="form-control">
                    <option value="" disabled selected>Select Grade</option>
                </select>
                <span asp-validation-for="students.GradeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
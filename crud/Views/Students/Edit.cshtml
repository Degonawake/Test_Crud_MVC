@model crud.Models.Entities.ViewModel

@{
    ViewData["Title"] = "Edit";
}


<h1>Edit Student Records</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="form-control bg-light" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="students.Id" />
            
            <div class="form-group">
                <label asp-for="students.FirstName" class="control-label">First Name</label>
                <input asp-for="students.FirstName" class="form-control" />
                <span asp-validation-for="students.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="students.LastName" class="control-label">Last Name</label>
                <input asp-for="students.LastName" class="form-control" />
                <span asp-validation-for="students.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="students.Birthdate" class="control-label">Birth Date</label>
                <input asp-for="students.Birthdate" class="form-control" type="date" />
                <span asp-validation-for="students.Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="students.ClassroomId" class="control-label">Classroom Code</label>
                <select asp-for="students.ClassroomId" asp-items="@(new SelectList(Model.classrooms, "Id", "Classroom"))" class="form-control">
                    <option value="" disabled selected>Select Classroom</option>
                </select>
                <span asp-validation-for="students.ClassroomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="students.GradeId" class="control-label">Grade</label>
                <select asp-for="students.GradeId" asp-items="@(new SelectList(Model.grades, "Id", "Grade"))" class="form-control">
                    <option value="" disabled selected>Select Grade</option>
                </select>
                <span asp-validation-for="students.ClassroomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
